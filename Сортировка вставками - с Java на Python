def insertion_sort(arr):
    for i in range(1, len(arr)):
        current = arr[i]      # Элемент для вставки
        position = i - 1      # Позиция для сравнения
        
        # Сдвигаем элементы больше текущего вправо
        while position >= 0 and arr[position] > current:
            arr[position + 1] = arr[position]
            position -= 1
        
        # Вставляем текущий элемент на найденную позицию
        arr[position + 1] = current


# Демонстрация работы
if __name__ == "__main__":
    numbers = [12, 11, 13, 5, 6]
    
    print(f"Исходный массив: {numbers}")
    insertion_sort(numbers)
    print(f"Отсортированный массив: {numbers}")
